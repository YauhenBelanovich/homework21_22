    <changeSet id="2" author="yauhen2012@gmail.com">
        <createTable tableName="shop">
            <column name="shop_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(40)"/>
            <column name="location" type="varchar(40)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="yauhen2012@gmail.com">
        <createTable tableName="item_shop">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="item_id" type="BIGINT">
                <constraints foreignKeyName="item_id" referencedColumnNames="item(item_id)" nullable="false"/>
            </column>
            <column name="shop_id" type="BIGINT">
                <constraints foreignKeyName="shop_id" referencedColumnNames="shop(shop_id)" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="yauhen2012@gmail.com">
        <createTable tableName="item_details">
            <column name="item_id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="price" type="varchar(40)"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="yauhen2012@gmail.com">
        <addForeignKeyConstraint baseColumnNames="item_id"
                                 baseTableName="item_details"
                                 constraintName="fk_item_details_to_item"
                                 onDelete="CASCADE"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="item"
                                 validate="true"/>
    </changeSet>
</databaseChangeLog>